@{
    ViewBag.Title = "My Partners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="top-menu" ng-class="{'hidden-top-menu': hideTopMenu}">
    <div class="col-sm-6">        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Partner Management</li>
        </ul>
    </div>
    <div class="col-sm-6">
        @Html.Partial("~/Views/Shared/_PartialUser.cshtml")
    </div>
</nav>

<div class="swal-btn-success"></div>
<div class="swal-btn-cancel"></div>

<section class="page-content">
    <div class="page-content-inner">
        @Html.Hidden("success", (object)ViewBag.Success)
        <section class="panel">
            <div class="panel-heading">
                <h3>Partner Management</h3>
                <h4>View All Partners</h4>
            </div>
           
            <div class="pull-right" id="dvActionKeys">
                <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("Registration", "Resellers")" onclick="redirectAction(this);">Create Reseller</a>
                <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("UpdateInfo")" onclick="redirectAction(this);">Update Partner Info</a>
                <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("ViewInfo")" onclick="redirectAction(this);">View Partner Info</a>
            </div>
            
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">
                            <table class="table table-inverse nowrap"  id="partnersTbl" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Company Name</th>
                                        <th>Primary Contact Number</th>
                                        <th>Location</th>
                                        <th>Parent Partner</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End  -->
    </div>
</section>


@section scripts {


    <script type="text/javascript">
        $(document).ready(function () {

            $('#example1').DataTable({
                responsive: true
            });

            $("#partnerMenu").addClass("active");
            $("#partnerIndex").addClass("active");
            $(".page-content").css("height", "100%");

            var strSuccess = document.getElementById('success').value;
            if (strSuccess != "") {
                getModal(0, strSuccess);
            }

            refreshPartnersTable(0);
        });
    </script>
}