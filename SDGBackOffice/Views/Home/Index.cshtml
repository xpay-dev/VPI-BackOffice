                                    @Html.Password("Password", "", new { @placeholder = "Password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <img id="Captcha" src="" />
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("txtCaptcha", "", new { @placeholder = "Captcha", @class = "form-control" })                                  
                                    <a href="#" id="getCaptcha" class="pull-right"><span class="fa fa-refresh"></span> Refresh</a>
                                </div>
                            </div>

                            <br />
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="pull-left">
                                        @Html.ActionLink("Forgot Password ?", "ForgotPassword", "Home", new { @class = "pull-left" })
                                        @Html.ActionLink("Change Password", "ChangePassword", "Home", new { @class = "pull-left" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    @Html.Hidden("RememberMe", "false")
                                    @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
                                    <input type="submit" class="btn btn-primary width-200 pull-right" id="submit" value="Log In" />
                                </div>
                            </div>
                        }
