<script type="text/javascript">

    $(document).ready(function () {
        $(".alert-danger").hide();
        var strErr = '@(ViewBag.Alert)';
        var strSuccess = '@(ViewBag.Success)';



        if (strErr != "") {
            $("#msg").text(strErr);
            //getModal(1, strErr);
        }

        if (strSuccess != "") {
            $("#msgSucess").text(strSuccess);
            $(".alert-success").show();
            //getModal(1, strSuccess);
        }

        $("#close").click(function () {
            $(".alert-danger").hide();
        });

        $("#closeSuccess").click(function () {
            $(".alert-success").hide();
            window.location = "Index";
        });
    });

</script>