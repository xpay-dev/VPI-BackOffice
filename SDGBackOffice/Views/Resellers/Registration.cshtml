@{
    ViewBag.Title = "Reseller Registration";
}

@model SDGBackOffice.Models.ResellerModel
<nav class="top-menu" ng-class="{'hidden-top-menu': hideTopMenu}">
    <div class="col-sm-6">        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Resellers")">Home</a></li>
            <li><a href="#">Reseller Management</a></li>
            <li class="active">Create New Reseller</li>
        </ul>
    </div>
    <div class="col-sm-6">
        @Html.Partial("~/Views/Shared/_PartialUser.cshtml")
    </div>
</nav>


<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-heading">
                <h3>Reseller Registration</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">
                            <!-- Horizontal Form -->
                            <form action="@Url.Action("Registration")" method="post" role="form" class="form-horizontal" id="jvalidate" autocomplete="off">

                                <div style="color:red;">
                                    @Html.ValidationSummary()
                                </div>

                                <div class="panel-body">
                                    <h4>Reseller Details</h4>

                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label class="form-control-label">Partner</label>
                                            @Html.DropDownListFor(m => m.PartnerId, (List<SelectListItem>)ViewBag.Partners, new { @placeholder = "Merchant Discount Rate", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label class="form-control-label">Company Name</label>
                                            @Html.TextBoxFor(m => m.ResellerName, new { @placeholder = "Company Name", @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-control-label">Company Email</label>
                                            @Html.TextBoxFor(m => m.ResellerEmail, new { @placeholder = "Company Email", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="panel-body">
                                    <h4><strong>Admin</strong> Details</h4>

                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <label class="form-control-label">First Name</label>
                                            @Html.TextBoxFor(m => m.User.FirstName, new { @placeholder = "First Name", @class = "form-control" })
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-control-label">Middle Name</label>
                                            @Html.TextBoxFor(m => m.User.MiddleName, new { @placeholder = "Middle Name", @class = "form-control" })
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-control-label">Last Name</label>
                                            @Html.TextBoxFor(m => m.User.LastName, new { @placeholder = "Last Name", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label class="form-control-label">Email Address</label>
                                            @Html.TextBoxFor(m => m.User.EmailAddress, new { @placeholder = "Email", @class = "form-control" })
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-control-label">Enter Username</label>
                                            @Html.TextBoxFor(m => m.User.Username, new { @placeholder = "Username", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label class="form-control-label">Enter Password</label>
                                            @Html.TextBoxFor(m => m.User.Password, new { @placeholder = "Password", @class = "form-control", @type = "password" })
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-control-label">Re-Enter Password</label>
                                            @Html.TextBoxFor(m => m.User.ConfirmPassword, new { @placeholder = "Re-enter Password", @class = "form-control", @type = "password" })
                                        </div>
                                    </div>
                                                                        
                                    <div class="form-actions">
                                        <div class="form-group row">
                                            <div class="col-md-3 pull-left">
                                                <input type="button" id="clearForm" class="btn btn-default" value="Clear Form">
                                            </div>
                                            <div class="col-md-9 ">
                                                <button class="btn btn-primary pull-right width-150">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <!-- End Horizontal Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

<script type="text/javascript">

    $(document).ready(function () {

        $("#resellerMenu").addClass("active");
        $("#resellerRegister").addClass("active");

        $("#PartnerId").change(function () {
            var x = document.getElementById('PartnerId');
            var id = x.options[x.selectedIndex].value;
        });

        $('#clearForm').click(function () {
            $("input[type=text]").val("");
            $("input[type=password]").val("");
        });
    });
</script>
@section scripts {
    <!-- THIS PAGE PLUGINS -->
    <script type='text/javascript' src='@Url.Content("~/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/smartwizard/jquery.smartWizard-2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/validation.js")"></script>
    <!-- END THIS PAGE PLUGINS -->
}
