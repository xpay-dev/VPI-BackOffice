@{
    ViewBag.Title = "Partner UpdateInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGBackOffice.Models.PartnerModel
<nav class="top-menu" ng-class="{'hidden-top-menu': hideTopMenu}">
    <div class="col-sm-6">        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Partners")">Home</a></li>
            <li><a href="#">Partner Management</a></li>
            <li class="active">Update My Info</li>
        </ul>

    </div>
    <div class="col-sm-6">
        @Html.Partial("~/Views/Shared/_PartialUser.cshtml")
    </div>
</nav>
<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-heading">
                <h3>Edit My Info</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">

                            <!-- Horizontal Form -->
                            <form role="form" class="form-horizontal" method="post" action="@Url.Action("UpdateMyInfo")">
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label">Company Name</label>
                                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @placeholder = "Company Name", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label">Street and Civic Number</label>
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Street and Civic Number" })
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control-label">City</label>
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label class="form-control-label">State / Province</label>
                                        @Html.TextBoxFor(m => m.StateProvince, new { @class = "form-control", @placeholder = "State / Province" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label">Zip / Postal Code</label>
                                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @placeholder = "Zip / Postal Code" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label">Country</label>
                                        @Html.DropDownListFor(m => m.CountryId, (List<SelectListItem>)ViewBag.Countries, new { @class = "form-control", @placeholder = "Country" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label class="form-control-label">Primary Contact Number</label>
                                        @Html.TextBoxFor(m => m.PrimaryContactNumber, new { @class = "form-control", @placeholder = "Primary Contact Number" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label">Fax</label>
                                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", @placeholder = "Fax" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label">Mobile Phone Number</label>
                                        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", @placeholder = "Mobile Phone Number" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label class="form-control-label">Company Email Address</label>
                                        @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", @placeholder = "Company Email Address", @type = "email" })
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <div class="form-group row">
                                        <div class="col-md-3 pull-left">
                                            @Html.ActionLink("Default Details", null, null, null, new { @class = "btn btn-default" })
                                            @Html.ActionLink("Back", "Index", "Partners", null, new { @class = "btn btn-default" })
                                        </div>
                                        <div class="col-md-9 ">
                                            <input type="submit" value="Save And Continue" class="btn btn-primary pull-right" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- End Horizontal Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {

        $("#partnerMenu").addClass("active");
        $("#partnerUpdate").addClass("active");
        $(".page-content").css("height", "100%");
    });
</script>

