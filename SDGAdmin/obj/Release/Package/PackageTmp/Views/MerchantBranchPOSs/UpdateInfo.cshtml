@{
    ViewBag.Title = "POS UpdateInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.MerchantPOSModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "MerchantBranchPOSs")">Home</a></li>
    <li><a href="#">POS Management</a></li>
    <li class="active">Update POS Info</li>
</ul>

<section class="panel">
    <div class="panel-heading">
        <h3>POS Info</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="margin-bottom-50">
                    <h4>Edit POS Details</h4>
                    <br />
                    <!-- Horizontal Form -->
                    <form role="form" class="form-horizontal" method="post" action="@Url.Action("UpdateInfo")" id="jvalidate">

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label">POS Name</label>
                                @Html.HiddenFor(m => m.POSId)
                                @Html.TextBoxFor(m => m.POSName, new { @class = "form-control", @placeholder = "POS Name" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="form-group row">
                                <div class="col-md-3 pull-left">
                                    @Html.ActionLink("Default Details", null, null, null, new { @class = "btn btn-default" })
                                    @Html.ActionLink("Back", "Index", "MerchantBranchPOSs", null, new { @class = "btn btn-default" })
                                </div>
                                <div class="col-md-9 ">
                                    <input type="submit" class="btn width-150 btn-primary pull-right" id="SaveAndContinue" title="Save And Continue" />
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- End Horizontal Form -->
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts {
    <!-- THIS PAGE PLUGINS -->
    <script type='text/javascript' src='@Url.Content("~/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/smartwizard/jquery.smartWizard-2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/validation.js")"></script>
    <!-- END THIS PAGE PLUGINS -->
}




