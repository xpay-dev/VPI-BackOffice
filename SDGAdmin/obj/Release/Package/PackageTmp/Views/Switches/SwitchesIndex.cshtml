@{
    ViewBag.Title = "Switch Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Switch</h2>

<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Switch Management</a></li>
</ul>

@model SDGAdmin.Models.PartnerModel


<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <br />
                        <div class="form-group">
                            <div class="col-md-4">
                                <a href="@Url.Action("PartnerSwitches")" class="btn btn-primary" onclick="redirectAction(this);">
                                    Partner Switch Management
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End  -->
    </div>
</section>

<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-heading">
                <h3>View All Switch</h3>
            </div>
            <div class="pull-right" id="dvActionKeys">
                <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("UpdateInfo")" onclick="redirectAction(this);">Update Switch Info</a>
                <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("ViewInfo")" onclick="redirectAction(this);">View Switch Info</a>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">
                            <table class="table table-inverse nowrap" id="swithTbl" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Switch</th>
                                        <th>Address Required</th>
                                        <th>Status</th>
                                        <th>Update Status</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End  -->
    </div>
</section>

<div class="message-box message-box-danger animated fadeIn div-hide" id="message-box-danger">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title"><span class="fa fa-times"></span>Error</div>
            <div class="mb-content">
                <p id="errMsg" style="font-size: large"></p>
            </div>
            <div class="mb-footer">
                <button id="close" class="btn btn-default btn-lg pull-right mb-control-close">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="message-box message-box-success animated fadeIn div-hide" id="message-box-success">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title"><span class="fa fa-check"></span>Success</div>
            <div class="mb-content">
                <p id="sMsg" style="font-size: large"></p>
            </div>
            <div class="mb-footer">
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            refreshSwitchTable(1);
        });
    </script>
}