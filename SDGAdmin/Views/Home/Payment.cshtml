@{
    ViewBag.Title = "Partner Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.PartnerModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Partners")">Home</a></li>
    <li><a href="#">Payment</a></li>
    <li class="active">Payment</li>
</ul>

<section class="panel">
    <div class="panel-heading">
        <h3>Payment</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="margin-bottom-50">
                    <h4>Partner Details</h4>
                    <!-- Horizontal Form -->
                    <form class="form-horizontal" id="jvalidate" autocomplete="off">                     
                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="col-md-4">
                                    <label class="form-control-label" for="l0">Payment Type</label>
                                    <div class="input-group-btn">
                                        <select class="form-control" >
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                            <option>Option 3</option>
                                            <option>Option 4</option>
                                            <option>Option 5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">Card Number</label>
                                <input type="text" class="form-control" name="" placeholder="Card Number">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label class="form-control-label" for="l0">Expiry</label>
                                <input type="text" class="form-control" name="" placeholder="Expiry">
                            </div>
                            <div class="col-md-2">
                                <label class="form-control-label" for="l0">Expiry</label>
                                <input type="text" class="form-control" name="" placeholder="Expiry">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">CVV</label>
                                <input type="text" class="form-control" name="" placeholder="CVV">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">Card Holder Name</label>
                                <input type="text" class="form-control" name="" placeholder="Card Holder Name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">Street</label>
                                <input type="text" class="form-control" name="" placeholder="Street">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">City</label>
                                <input type="text" class="form-control" name="" placeholder="City">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="form-control-label" for="l0">Postcode</label>
                                <input type="text" class="form-control" name="" placeholder="Postcode">
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="form-group row">
                                <div class="col-md-3 pull-left">
                                    <button class="btn width-150 btn-primary">Pay Now</button>
                                </div>
                                @*<div class="col-md-9 ">

                                    </div>*@
                            </div>
                        </div>
                    </form>
                    <!-- End Horizontal Form -->
                </div>
            </div>
        </div>
    </div>
</section>


