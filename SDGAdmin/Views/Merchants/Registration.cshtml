@{
    ViewBag.Title = "Merchant Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.MerchantModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Merchants")">Home</a></li>
    <li><a href="#">Merchant Management</a></li>
    <li class="active">Create New Merchant</li>
</ul>

<div class="swal-btn-success"></div>
<div class="swal-btn-cancel"></div>

<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-heading">
                <h3>Merchant Registration</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">
                            <h4>Merchant Details</h4>
                            <!-- Horizontal Form -->
                            <form action="@Url.Action("Registration")" method="post" role="form" class="form-horizontal" id="jvalidate" autocomplete="off">
                                <div style="color: red;">
                                    @Html.ValidationSummary()
                                    @Html.Hidden("rId", "")
                                </div>

                                <div class="form-group row ddl">
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="l0">Select Partner</label>
                                        @Html.DropDownList("ddlpartner", (List<SelectListItem>)ViewBag.Partners, new { @placeholder = " ", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row ddl">
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="l0">Select Reseller</label>
                                        @Html.DropDownList("ddlreseller", new List<SelectListItem>() { new SelectListItem { Text = "No Resellers available", Value = "0" } }, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label" for="l0">Merchant Name</label>
                                        @Html.TextBoxFor(m => m.MerchantName, new { @placeholder = "Merchant Name", @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">First Name</label>
                                        @Html.TextBoxFor(m => m.User.FirstName, new { @placeholder = "First Name", @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">Middle Name</label>
                                        @Html.TextBoxFor(m => m.User.MiddleName, new { @placeholder = "Middle Name", @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">Last Name</label>
                                        @Html.TextBoxFor(m => m.User.LastName, new { @placeholder = "Last Name", @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">Merchant Email</label>
                                        @Html.TextBoxFor(m => m.User.EmailAddress, new { @placeholder = "Email", @class = "form-control" })
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">Billing Cycle</label>
                                        @Html.DropDownListFor(m => m.BillingCycleId, (List<SelectListItem>)ViewBag.BillingCycles, new { @placeholder = " ", @class = "form-control" })
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-control-label" for="l0">Currency</label>
                                        @Html.DropDownListFor(m => m.CurrencyId, (List<SelectListItem>)ViewBag.Currencies, new { @placeholder = " ", @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <label class="form-control-label" for="l0">Enter Username</label>
                                        @Html.TextBoxFor(m => m.User.Username, new { @placeholder = "Username", @class = "form-control" })
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-control-label" for="l0">Enter Password</label>
                                        @Html.TextBoxFor(m => m.User.Password, new { @placeholder = "Password", @class = "form-control", @type = "password" })
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-control-label" for="l0">Re-Enter Password</label>
                                        @Html.TextBoxFor(m => m.User.ConfirmPassword, new { @placeholder = "Re-Enter Password", @class = "form-control", @type = "password" })
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-control-label" for="l0">PIN</label>
                                        @Html.TextBoxFor(m => m.User.PIN, new { @placeholder = "PIN", @class = "form-control", @type = "password" })
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <div class="form-group row">
                                        <div class="col-md-3 pull-left">
                                            <input type="button" class="btn btn-default" value="Clear Form" id="clearForm" />
                                        </div>
                                        <div class="col-md-9 ">
                                            <button class="btn width-150 btn-primary pull-right" id="btnSubmit">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- End Horizontal Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

@section scripts {
    <!-- THIS PAGE PLUGINS -->
    <script type='text/javascript' src='@Url.Content("~/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/smartwizard/jquery.smartWizard-2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/validation.js")"></script>
    <!-- END THIS PAGE PLUGINS -->
   }

    <script type="text/javascript">
        $(document).ready(function () {
            $("select").each(function () { this.selectedIndex = 0 });

            $("#merchantMenu").addClass("active");
            $("#merchantSubmenu").addClass("active");
            $("#merchantSubRegister").addClass("active");

            var hide = false;

            hideDdl();

            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }


            function hideDdl() {
                var id = getParameterByName("id");

                if (id != 0) {
                    hide = true;
                    document.getElementById('rId').value = id;
                    $(".ddl").hide();
                }
            }

            if ($("#ddlpartner > option").length == 1) {
                $.ajax({
                    url: rootDir + 'Ajax/GetReseller',
                    type: 'POST',
                    data: { "pId": $("#ddlpartner").val() },
                    dataType: "json",
                    success: function (data) {
                        $("option[value='-1']").remove();
                        $('#ddlreseller').empty()
                        $.each(data, function (key, value) {
                            $("#ddlreseller").append($("<option></option>").val(value.Value).html(value.Text));
                        });

                        if (data.length == 1) {
                            document.getElementById('rId').value = $("#ddlreseller").val();
                        }
                    }
                });
            }

            $("#ddlpartner").on("change", function () {
                var id = document.getElementById('ddlpartner').value;
                $.ajax({
                    url: rootDir + 'Ajax/GetReseller',
                    type: 'POST',
                    data: { "pId": id },
                    dataType: "json",
                    success: function (data) {
                        $("option[value='-1']").remove();
                        $('#ddlreseller').empty()
                        $.each(data, function (key, value) {
                            $("#ddlreseller").append($("<option></option>").val(value.Value).html(value.Text));
                        });

                        if (data.length == 1) {
                            document.getElementById('rId').value = $("#ddlreseller").val();
                        }
                    }
                });
            });

            $("#ddlreseller").on("change", function () {
                var id = document.getElementById('ddlreseller').value;
                document.getElementById('rId').value = id;
            });

            $("#btnSubmit").click(function () {
                if (hide == false) {
                    if ($("#ddlpartner").val() == 0) {
                        $("#message-box-danger").show();
                        var errorMsg = "No Partner Selected";
                        getModal(1, errorMsg);
                    } else {
                        if ($("#ddlreseller").val() == 0) {
                            $("#message-box-danger").show();
                            var errorMsg = "No Reseller Selected";
                            getModal(1, errorMsg);
                        } else {
                            $("#jvalidate").submit();
                        }
                    }
                } else {
                    $("#jvalidate").submit();
                }
            });

            $('#clearForm').click(function () {
                $("input[type=text]").val("");
                $("input[type=password]").val("");
            });
        });
    </script>

