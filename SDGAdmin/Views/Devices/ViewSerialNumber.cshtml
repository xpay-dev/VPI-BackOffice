@{
    ViewBag.Title = "ViewSerialNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.MasterDeviceModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Devices")">Home</a></li>
    <li class="#">Device Management</li>
    <li class="active">View Serial Number</li>
</ul>

<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <form id="jvalidate-device" action="@Url.Action("ViewSerialNumber")" method="post" role="form">
                <div class="panel-heading">
                    <h3>Device: @Model.DeviceName</h3>
                    <h4>View All Serial Number</h4>
                </div>
                @Html.HiddenFor(m => m.MasterDeviceId, new { id = "hdnMasterDeviceID" })
                <div class="pull-right" id="dvActionKeys">
                    <a href="#" class="btn btn-primary margin-inline" data-link="@Url.Action("UpdateSerialNumber")" onclick="redirectAction(this);">Update Serial Number</a>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="margin-bottom-50">

                                <table class="table table-hover nowrap" id="deviceTbl" width="100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Serial Number</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
        <!-- End  -->
    </div>
    <div class="message-box message-box-success animated fadeIn hide div-contain div-hide" id="message-box-success">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title"><span class="fa fa-check"></span>Success</div>
                <div class="mb-content">
                    <p id="msg" style="font-size: large"></p>
                </div>
                <div class="mb-footer">
                </div>
            </div>
        </div>
    </div>
</section>

<div class="message-box message-box-danger animated fadeIn div-hide" id="message-box-danger">
    <div class="mb-container">
        <div class="mb-middle">
            <div class="mb-title"><span class="fa fa-times"></span>Error</div>
            <div class="mb-content">
                <p id="errMsg" style="font-size: large"></p>
            </div>
            <div class="mb-footer">
                <button id="close" class="btn btn-default btn-lg pull-right mb-control-close">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type='text/javascript' src='@Url.Content("~/js/backoffice.js")'></script>
    <!-- THIS PAGE PLUGINS -->
    <script type='text/javascript' src='@Url.Content("~/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/js/plugins/datatables/jquery.dataTables.min.js")"></script>
    <!-- END PAGE PLUGINS -->

    <script type="text/javascript">
        $(document).ready(function () {
            var mdId = document.getElementById('hdnMasterDeviceID').value;
            refreshSNTablebyMasterDevice(mdId);
        });
    </script>
}
