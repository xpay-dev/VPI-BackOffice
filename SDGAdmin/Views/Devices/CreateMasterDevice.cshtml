@{
    ViewBag.Title = "Create Master Device";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.MasterDeviceModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Devices")">Home</a></li>
    <li><a href="#">Device Management</a></li>
    <li class="active">Create New Master Device</li>
</ul>
<!-- END BREADCRUMB -->

<section class="page-content">
    <div class="page-content-inner">
        <section class="panel">
            <div class="panel-heading">
                <h3>Device Registration</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="margin-bottom-50">
                            <!-- Horizontal Form -->
                            <div style="color: red;">
                                @Html.ValidationSummary()
                            </div>
                            <form id="jvalidate-device" action="@Url.Action("CreateMasterDevice")" method="post" role="form" class="form-horizontal">

                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label">Device Name</label>
                                        @Html.TextBoxFor(m => m.DeviceName, new { @class = "form-control", @placeholder = "Device Name" })
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control-label">Manufacturer</label>
                                        @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control", @placeholder = "Manufacturer" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label">Warranty</label>
                                        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control", @placeholder = "Warranty" })
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control-label">Other</label>
                                        @Html.TextBoxFor(m => m.ExternalData, new { @class = "form-control", @placeholder = "Other" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label class="form-control-label">Device Type</label>
                                        @Html.DropDownListFor(m => m.DeviceTypeId, (List<SelectListItem>)ViewBag.DeviceType, new { @class = "form-control", @placeholder = "Switch" })
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-control-label">Device Flow Type</label>
                                        @Html.DropDownListFor(m => m.DeviceFlowTypeId, (List<SelectListItem>)ViewBag.DeviceFlowType, new { @class = "form-control", @placeholder = "Card Type" })
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="form-group row">
                                        <div class="col-md-3 pull-left">
                                            <input type="button" id="clearForm" class="btn btn-default" value="Clear Form">
                                        </div>
                                        <div class="col-md-9">
                                            <button class="btn btn-primary pull-right">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- End Horizontal Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>




@section scripts {
    <!-- THIS PAGE PLUGINS -->
    <script type='text/javascript' src='@Url.Content("~/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/smartwizard/jquery.smartWizard-2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/validation.js")" ></script>
    <!-- END THIS PAGE PLUGINS -->
    <script type="text/javascript">
        $(document).ready(function () {

            $("#deviceMenu").addClass("active");
            $("#deviceRegister").addClass("active");

            $('#clearForm').click(function () {
                $("input[type=text]").val("");
                $("input[type=password]").val("");
            });
        });
    </script>

}
