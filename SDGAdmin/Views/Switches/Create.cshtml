@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SDGAdmin.Models.SwitchModel

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Merchant Management</a></li>
    <li class="active">Create New POS</li>
</ul>
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            <form action="@Url.Action("Create")" method="post" role="form" class="form-horizontal" id="jvalidate" autocomplete="off">
                @Html.Hidden("hdnId", "")
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Create Switch</strong></h3>
                        <br />
                        <br />
                        <div style="color: red;">
                            @Html.ValidationSummary()
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Switch Name:</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            @Html.TextBoxFor(s => s.SwitchName, null, new { @placeholder = "Switch Name" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-primary pull-right btnSubmit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script type='text/javascript' src='@Url.Content("~/js/backoffice.js")'></script>
    <!-- END PAGE PLUGINS -->

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}