@{
    if (ViewBag.Title == null)
    {
        ViewBag.Title = "SD Group";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META SECTION -->
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="@Url.Content("~/Css/theme-default.css")" />
    <!-- EOF CSS INCLUDE -->
    <!-- START SCRIPTS -->
    <!-- START PLUGINS -->
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/jquery/jquery-ui.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/bootstrap/bootstrap.min.js")"></script>
    <!-- END PLUGINS -->
    <!-- START TEMPLATE -->
    @*<script type="text/javascript" src="@Url.Content("~/js/settings.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/js/plugins/fileupload/jquery.fileupload.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/actions.js")"></script>
    <script type="text/javascript">
        var rootDir = "@Url.Content("~/")";
    </script>

    <script type="text/javascript" src="@Url.Content("~/js/plugins/noty/jquery.noty.js")">
    </script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/noty/layouts/topCenter.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/noty/layouts/topRight.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/noty/layouts/topLeft.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/plugins/noty/themes/default.js")"></script>

    
    <!-- END TEMPLATE -->
    <!-- END SCRIPTS -->
</head>
<body>
    @Html.Hidden("logoutClick", "")
    <!-- START PAGE CONTAINER -->
    <div class="page-container">

        <!-- START PAGE SIDEBAR -->
        <div class="page-sidebar">
                <!-- START X-NAVIGATION -->
                <ul class="x-navigation">
                    <li class="xn-logo">
                        <a href="#">SD Group</a>
                        <a href="#" class="x-navigation-control"></a>
                    </li>
                    <li class="xn-profile">
                        <a href="#" class="profile-mini">
                            <form action="@Url.Action("UploadUserPhoto", "Home")" method="post">
                                <input type="file" name="imageFile" id="imageFile" value="imageFile">
                            </form>
                        </a>
                        <div class="profile">
                            <div class="profile-image" id="profileImage">
                                <img id="userPhoto"
                                     data-container="body"
                                     data-toggle="popover"
                                     data-placement="right"
                                     src="@SDGAdmin.CurrentUser.Avatar" alt="@SDGAdmin.CurrentUser.DisplayName"
                                     onerror="this.onerror; this.src = '@Url.Content("~/assets/images/users/avatar.jpg")'" />
                            </div>
                            <div class="profile-data">
                                <div class="profile-data-name">@SDGAdmin.CurrentUser.DisplayName</div>
                                <div class="profile-data-title">@SDGAdmin.CurrentUser.Role</div>
                            </div>
                        </div>
                    </li>
                    <li>
                        @Html.ActionLink("Dashboard", "Dashboard", "Home", null, new { @class = "xn-text" })
                    </li>

                    <!-- Partner Pages -->
                    <li id="partnerMenu" class="xn-openable">
                        <a href="#">Partner Management</a>
                        <ul>
                            <li id="partnerIndex">@Html.ActionLink("View All Partners", "Index", "Partners", null, new { @class = "xn-text" })</li>
                            <li id="partnerUpdate">@Html.ActionLink("Update My Info", "UpdateInfo", "Partners", null, new { @class = "xn-text" })</li>
                            <li id="partnerRegister">@Html.ActionLink("Register New Partner", "Registration", "Partners", null, new { @class = "xn-text" })</li>
                            <li id="partnerRegistersub">@Html.ActionLink("Register Sub Partner", "RegistrationSubPartner", "Partners", null, new { @class = "xn-text" })</li>
                            @*<li>@Html.ActionLink("Register Partner User", "NewUser", "Partners", null, new { @class = "xn-text" })</li>*@

                        </ul>
                    </li>

                    <!-- Reseller Pages -->
                    <li id="resellerMenu" class="xn-openable">
                        <a href="#"><span class="xn-text">Reseller Management</span></a>
                        <ul>
                            <li id="resellerIndex">@Html.ActionLink("View All Resellers", "Index", "Resellers", null, new { @class = "xn-text" })</li>
                            @*<li>@Html.ActionLink("View My Info", "ViewMyInfo", "Resellers", null, new { @class = "xn-text" })</li>*@
                            @*<li>@Html.ActionLink("Update My Info", "UpdateMyInfo", "Resellers", null, new { @class = "xn-text" })</li>*@
                            <li id="resellerRegister">@Html.ActionLink("Register New Reseller", "Registration", "Resellers", null, new { @class = "xn-text" })</li>
                            @*<li>@Html.ActionLink("Register Reseller User", "NewUser", "Resellers", null, new { @class = "xn-text" })</li>*@

                        </ul>
                    </li>

                    <!-- Merchant Pages -->
                    <li id="merchantMenu" class="xn-openable">
                        <a href="#">Merchant Management</a>
                        <ul>
                            @* Merchant *@
                            <li id="merchantSubmenu" class="xn-openable">
                                <a href="#">Merchant</a>
                                <ul>
                                    <li id="merchantSubIndex">@Html.ActionLink("View All Merchants", "Index", "Merchants", null, new { @class = "xn-text" })</li>
                                    <li id="merchantSubIndex">@Html.ActionLink("View Merchant Request", "RequestedMerchants", "Merchants", null, new { @id = "merchant", @class = "xn-text" })</li>
                                    <li id="merchantSubRegister">@Html.ActionLink("Register New Merchant", "Registration", "Merchants", null, new { @class = "xn-text" })</li>
                                    <li id="merchantBulkRegister">@Html.ActionLink("Merchant Bulk Boarding", "MerchantBulkBoarding", "Merchants", null, new { @id = "merchant", @class = "xn-text" })</li>
                                    @*<li>@Html.ActionLink("View My Info", "ViewMyInfo", "Merchants", null, new { @class = "xn-text" })</li>*@
                                    @*<li>@Html.ActionLink("Update My Info", "UpdateMyInfo", "Merchants", null, new { @class = "xn-text" })</li>*@
                                    @*<li>@Html.ActionLink("Register Merchant User", "NewUser", "Merchants", null, new { @class = "xn-text" })</li>*@
                                </ul>
                            </li>
                            @* Branches *@
                            <li id="merchantbranchSubmenu" class="xn-openable">
                                <a href="#">Merchant Branch</a>
                                <ul>
                                    <li id="merchantbranchSubIndex">@Html.ActionLink("View All Branches", "Index", "MerchantBranches", null, new { @class = "xn-text" })</li>
                                    <li id="merchantbranchSubRegister">@Html.ActionLink("Register New Branch", "Registration", "MerchantBranches", null, new { @class = "xn-text" })</li>
                                    @*<li>@Html.ActionLink("Register Branch User", "NewUser", "MerchantBranches", null, new { @class = "xn-text" })</li>*@
                                </ul>
                            </li>
                            @* POS *@
                            <li id="merchantposSubmenu" class="xn-openable">
                                <a href="#">POS</a>
                                <ul>
                                    <li id="merchantposSubIndex">@Html.ActionLink("View All POSs", "Index", "MerchantBranchPOSs", null, new { @class = "xn-text" })</li>
                                    <li id="merchantposSubRegister">@Html.ActionLink("Register New POS", "Create", "MerchantBranchPOSs", new { id = 0 }, new { @class = "xn-text" })</li>
                                    @*<li>@Html.ActionLink("View Default MIDs", "ViewDefaultMids", "MerchantBranchPOSs", null, new { @class = "xn-text" })</li>
                                    <li>@Html.ActionLink("Update Default MIDs", "UpdateDefaultMids", "MerchantBranchPOSs", null, new { @class = "xn-text" })</li>*@
                                </ul>
                            </li>
                            @* MIDs *@
                            <li id="merchantmidSubmenu" class="xn-openable">
                                <a href="#">MID</a>
                                <ul>
                                    <li id="merchantmidSubIndex">@Html.ActionLink("View All MIDs", "Index", "MIDs", null, new { @class = "xn-text" })</li>
                                    <li id="merchantmidSubRegister">@Html.ActionLink("Register New MID", "Registration", "MIDs", null, new { @class = "xn-text" })</li>
                                    @*<li>@Html.ActionLink("MID Location", "IndexMidsLocation", "MIDs", null, new { @class = "xn-text" })</li>
                                    <li>@Html.ActionLink("MID POS", "IndexMidsPos", "MIDs", null, new { @class = "xn-text" })</li>*@
                                </ul>
                            </li>
                        </ul>
                    </li>

                    @* Features *@
                    <li id="featuresMenu" class="xn-openable">
                        <a href="#">Features</a>
                        <ul>
                            <li id="featureMerchant">@Html.ActionLink("Merchant Features", "Index", "MerchantFeatures", null, new { @class = "xn-text" })</li>
                            <li id="featurePOS">@Html.ActionLink("POS Features", "Index", "POSFeatures", null, new { @class = "xn-text" })</li>
                            <li id="featureEmailServer">@Html.ActionLink("Email Server", "Index", "EmailServer", null, new { @class = "xn-text" })</li>
                        </ul>
                    </li>

                    @* Device Page *@
                    <li id="deviceMenu" class="xn-openable">
                        <a href="#">Device Management</a>
                        <ul>
                            <li id="deviceIndex">@Html.ActionLink("View All Devices", "Index", "Devices", null, new { @class = "xn-text" })</li>
                            <li id="deviceRegister">@Html.ActionLink("Create New Device", "CreateMasterDevice", "Devices", null, new { @class = "xn-text" })</li>
                            <li id="deviceAddSerial">@Html.ActionLink("Add Serial Number", "AddSerialNumber", "Devices", null, new { @class = "xn-text" })</li>
                        </ul>
                    </li>

                    @* User Management *@
                    <li>@Html.ActionLink("User Management", "Index", "Users", null, new { @class = "xn-text" })</li>

                    @*Switch Management*@
                    <li>
                        @Html.ActionLink("Switch Management", "SwitchesIndex", "Switches", null, new { @class = "xn-text" })
                    </li>

                    <li>
                        @Html.ActionLink("Reports Central", "Index", "Reports", null, new { @class = "xn-text" })
                    </li>
                    <li>
                        @Html.ActionLink("Reports Graph", "ReportsGraph", "Reports", null, new { @class = "xn-text" })
                    </li>
                    <li id="ctpayment" class="xn-openable">
                        <a href="#">CT Payment</a>
                        <ul>
                            <li id="CTAddUser">@Html.ActionLink("Add User", "Index", "CTPaymentUser", null, new { @class = "xn-text" })</li>
                            <li id="CTBulkMerchant" class="xn-openable">
                                <a href="#">Merchant Bulk Boarding</a>
                                <ul>
                                    <li id="AddBulk">@Html.ActionLink("Add Bulk Merchant", "Add", "MerchantOnBoard", null, new { @class = "xn-text" })</li>
                                    <li id="UpdateBulk">@Html.ActionLink("Update Bulk Merchant", "Update", "MerchantOnBoard", null, new { @class = "xn-text" })</li>
                                    <li id="DeleteBulk">@Html.ActionLink("Delete Bulk Merchant", "Delete", "MerchantOnBoard", null, new { @class = "xn-text" })</li>
                                    <li id="ViewResults">@Html.ActionLink("Get Filenames", "GetFileNames", "MerchantOnBoard", null, new { @class = "xn-text" })</li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- END X-NAVIGATION -->
        </div>
        <!-- END PAGE SIDEBAR -->
        <!-- PAGE CONTENT -->
        <div class="page-content">
            <!-- START X-NAVIGATION VERTICAL -->
            <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                @*<!-- TOGGLE NAVIGATION -->
                    <li class="xn-icon-button">
                        <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                    </li>
                    <!-- END TOGGLE NAVIGATION -->
                    <!-- SEARCH -->
                    <li class="xn-search">
                        <form role="form">
                            <input type="text" name="search" placeholder="Search..." />
                        </form>
                    </li>
                    <!-- END SEARCH -->*@
                <!-- SIGN OUT -->
                <li class="xn-icon-button pull-right">
                    <a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                </li>
                <!-- END SIGN OUT -->
            </ul>
            <!-- END X-NAVIGATION VERTICAL -->
            @RenderBody()
        </div>
        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER -->





    <!-- MESSAGE BOX-->
    <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title"><span class="fa fa-sign-out"></span>Log <strong>Out</strong> ?</div>
                <div class="mb-content">
                    <p>Are you sure you want to log out?</p>
                    <p>Choose No if you want to continue working. Choose Yes to logout current user.</p>
                </div>
                <div class="mb-footer">
                    <div class="pull-right">
                        @Html.ActionLink("Yes", "Index", "Home", null, new { @id = "btnYes", @class = "btn btn-success btn-lg" })
                        <button class="btn btn-default btn-lg mb-control-close">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
    <!-- START PRELOADS -->
    <audio id="audio-alert" src="@Url.Content("~/audio/alert.mp3")" preload="auto"></audio>
    <audio id="audio-fail" src="@Url.Content("~/audio/fail.mp3")" preload="auto"></audio>
    <script type='text/javascript' src='@Url.Content("~/js/jquery.cookie.js")'></script>
    <!-- END PRELOADS -->
    @RenderSection("scripts", false)
    <script type="text/javascript">
        var t;

        $(document).ready(function () {
            t = setTimeout(function () {
                $("div[id^='popover']").remove();
                t = null;
            }, 2000);
        });

        $("#btnYes").click(function () {
            $.removeCookie("visitsAdmin");
        });

        $("#profileImage").on("click", function () {
            $("#imageFile").click();
        });

        $("#userPhoto").click(function () {
            $("#imageFile").click();
        });

        $('#imageFile').fileupload({
            dataType: 'json',
            url: '@Url.Action("UploadUserPhoto", "Home")',
            autoUpload: true,
            done: function (e, data) {
                $('#userPhoto').attr("src", "@Url.Content("~/UserPictures/")" + data.result.filename);
            }
        });

        function onImageError(obj) {
            obj.onerror = null;
            obj.src = '@Url.Content("~/assets/images/users/avatar.jpg")';
            //$(obj).click();
            //$(obj).on('click', function () {
            //    $("#profileImage").click();
            //});
        }

        $("#userPhoto").click(function () {
            return false;
        });

        $("#btnYes").click(function () {
            document.getElementById('logoutClick').value = true;
        });
    </script>
</body>
</html>
