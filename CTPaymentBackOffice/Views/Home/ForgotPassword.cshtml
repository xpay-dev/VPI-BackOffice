@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="body-full-height">
<head>
    <!-- META SECTION -->
    <title>CT-Payment Backoffice</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="~/Css/theme-default.css" />
    <!-- EOF CSS INCLUDE -->
    <script type="text/javascript" src="/js/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/js/plugins/jquery/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/js/plugins/bootstrap/bootstrap.min.js"></script>

</head>
<body>
    <div class="login-container">
        <div class="login-box animated fadeInDown">
            <div class="login-logo"></div>
            <div class="login-body">
                <div class="login-title">Forgot your Password?</div>
                @using (Html.BeginForm("ForgotPassword", "Home",
               new { ReturnUrl = Url.Action("ForgotPassword", "Home") },
               FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.Hidden("hdnHolder", "")
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBox("Username", "", new { @placeholder = "Username", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBox("Email", "", new { @placeholder = "Email", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.ActionLink("Back", "Index", "Home", new { @class = "btn btn-info btn-block" })
                        </div>
                        <div class="col-md-6">
                            @Html.Hidden("RememberMe", "false")
                            @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
                            <input type="submit" class="btn btn-success btn-block" id="submit" value="Email Link" />
                        </div>
                    </div>
                }
            </div>
            <div class="login-footer">
                <div class="pull-left">
                    &copy; 2015 CT-Payment Backoffice
                </div>
                <div class="pull-right">
                    <a href="~/#" class="login-link">About</a> |
                    <a href="~/#" class="login-link">Privacy</a> |
                    <a href="~/#" class="login-link">Contact Us</a>
                </div>
            </div>
        </div>
        <div class="message-box message-box-danger animated fadeIn" id="message-box-danger">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-times"></span>Error</div>
                    <div class="mb-content">
                        <p id="msg" style="font-size: large">Please select a Switch.</p>
                    </div>
                    <div class="mb-footer">
                        <button id="close" class="btn btn-default btn-lg pull-right mb-control-close">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="message-box message-box-success animated fadeIn" id="message-box-success">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-check"></span>Success</div>
                    <div class="mb-content">
                        <p id="msgSucess" style="font-size: large">Please select a Switch.</p>
                    </div>
                    <div class="mb-footer">
                        <button id="closeSuccess" class="btn btn-default btn-lg pull-right mb-control-close">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<!-- PAGE CONTENT WRAPPER -->
<!-- THIS PAGE PLUGINS -->
<script type="text/javascript">

    $(document).ready(function () {
        $("#message-box-danger").hide();
        var strErr = '@(ViewBag.Alert)';
        var strSuccess = '@(ViewBag.Success)';

        if (strErr != "") {
            $("#msg").text(strErr);
            $("#message-box-danger").show();
        }

        if (strSuccess != "") {
            $("#msgSucess").text(strSuccess);
            $("#message-box-success").show();
        }

        $("#close").click(function () {
            $("#message-box-danger").hide();
        });

        $("#closeSuccess").click(function () {
            $("#message-box-success").hide();
            window.location = "Index";
        });
    });

</script>